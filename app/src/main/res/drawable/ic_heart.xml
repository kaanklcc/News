<!-- res/drawable/heart_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF0000"/> <!-- Basılıyken kırmızı -->
            <size android:width="66dp" android:height="43dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#D32F2F"/> <!-- Normalde koyu kırmızı -->
            <size android:width="66dp" android:height="43dp"/>
        </shape>
    </item>
</selector>
